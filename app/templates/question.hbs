<div class="well">
  <h3>{{model.title}}</h3>
  <h6>Asked by {{model.author}}</h6>
  <br>
  <h5>Additional notes:</h5>
  {{model.note}}
  <br>
  <br>
  {{#if session.isAuthenticated}}
  <div class="btn-group">
    <a href="/"{{action 'deleteQuestion' model}}>Delete question</a>
    {{question-update question=model updateQuestion="updateQuestion"}}
  </div>
  <br>
  <br>
  <div class="star-rating">
    Add to favorites
    <button {{action 'addToFavorite' model}} class="fa fa-star-o" data-rating="1">
    </button>
  </div>
  {{else}}
    {{#link-to 'sign-in'}}Sign-in{{/link-to}} to view additional options.
  {{/if}}
</div>

  {{answer-tile answers=model.answers deleteAnswer="deleteAnswer" answer=answer}}

<br>

{{answer-add saveAnswer="saveAnswer" question=model}}
<br>
